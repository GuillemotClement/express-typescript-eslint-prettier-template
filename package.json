{
  "name": "express-typescript-eslint-prettier-template",
  "version": "1.0.0",
  "type": "module",
  "description": "An Node22, Express.js template with TypeScript, ESLint and Prettier",
  "scripts": {
    "dev": "tsx --watch --env-file .env.development.local src/index.ts",
    "dev:staging": "tsx --watch --env-file .env.staging src/index.ts",
    "dev:prod": "tsx --watch --env-file .env.production src/index.ts",
    "start": "node --env-file .env dist/index.js",
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  },
  "keywords": [],
  "author": "Cl√©ment GUILLEMOT",
  "license": "MIT",
  "imports": {
    "#*": "./src/*"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@tsconfig/node-lts": "^22.0.1",
    "@tsconfig/node22": "^22.0.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/eslint-plugin": "^1.1.25",
    "eslint": "^9.18.0",
    "eslint-plugin-perfectionist": "^4.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^3.0.0"
  }
}
